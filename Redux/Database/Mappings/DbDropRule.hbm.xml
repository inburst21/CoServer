<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Redux"
                   namespace="Redux.Database.Domain">

  <class name="DbDropRule" table="`drop_rules`">
    <id name="UID" column="`UID`">
      <generator class="identity" />
    </id>
    <property name="MonsterID" column="`MonsterID`"/>
    <property name="RuleType" column="`RuleType`"/>
    <property name="RuleChance" column="`RuleChance`"/>
    <property name="RuleAmount" column="`RuleAmount`"/>
    <property name="RuleValue" column="`RuleValue`"/>   
  </class>

</hibernate-mapping>